{
  "$schema": "https://schemas.wp.org/trunk/block.json",
  "apiVersion": 2,
  "name": "gutenberg-mega-menu/mega-menu",
  "title": "Gutenberg Mega Menu",
  "category": "design",
  "icon": "menu",
  "description": "A desktop-only mega menu with groups, columns, separators, and custom menu items.",
  "keywords": ["mega menu", "navigation", "menu"],
  "supports": {
    "align": ["wide", "full"],
    "html": false
  },
  "textdomain": "gutenberg-mega-menu",

  "editorScript": "file:./build/index.js",
  "editorStyle": "file:./build/index.css",
  "style": "file:./build/style-index.css",

  "attributes": {
    "menuId": {
      "type": "number",
      "default": 0
    }
  },

  "usesContext": [ "postId", "postType" ],

  "providesContext": {
    "gutenberg-mega-menu/menuId": "menuId"
  },

  "example": {
    "attributes": {
      "menuId": 0
    },
    "innerBlocks": [
      {
        "name": "core/group",
        "innerBlocks": [
          {
            "name": "core/columns",
            "innerBlocks": [
              {
                "name": "core/column",
                "innerBlocks": [
                  {
                    "name": "gutenberg-mega-menu/menu-link",
                    "attributes": {
                      "label": "Example Menu Item",
                      "url": "#"
                    }
                  },
                  { "name": "core/separator" },
                  {
                    "name": "core/image",
                    "attributes": {
                      "url": "https://picsum.photos/200"
                    }
                  }
                ]
              }
            ]
          }
        ]
      }
    ]
  }
}